{
  "name": "pokerandom-desktop",
  "version": "1.0.0",
  "description": "PokéRandom Desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/switchlove/Pokeclicker-desktop.git"
  },
  "main": "src/main.js",
  "scripts": {
    "start": "electron ./",
    "restore-src": "git restore --source=HEAD --staged --worktree -- src/poke-random && git clean -x -f -- src/poke-random",
    "dist:32": "electron-builder --ia32 -c.artifactName=${productName}-32bit-setup-${version}.${ext}",
    "dist:64": "electron-builder --x64 -c.artifactName=${productName}-64bit-setup-${version}.${ext}",
    "pub:32": "electron-builder --ia32 -c.artifactName=${productName}-32bit-setup-${version}.${ext} -p always",
    "pub:64": "electron-builder --x64 -c.artifactName=${productName}-64bit-setup-${version}.${ext} -p always",
    "win": "electron-builder --windows portable",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "DevSwitch",
    "email": "dev@switchlove.app"
  },
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.5",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^4.3.9"
  },
  "devDependencies": {
    "electron": "^13.1.5",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "productName": "PokéRandom",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "publish": [{
          "provider": "github",
          "owner": "switchlove",
          "repo": "Pokeclicker-desktop"
      }]
    },
    "linux": {
      "category": "Game",
      "icon": "icon_512x512.png"
    },
    "deb": {},
    "appId": "pokerandom.desktop"
  }
}
