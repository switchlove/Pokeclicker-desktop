{
    "name": "pokeclicker-desktop-acsrq",
    "version": "1.2.0",
    "description": "PokeClicker Desktop ACSRQ",
    "repository": {
        "type": "git",
        "url": "https://github.com/switchlove/Pokeclicker-desktop.git"
    },
    "main": "src/main.js",
    "scripts": {
        "start": "electron ./",
        "restore-src": "git restore --source=HEAD --staged --worktree -- src/pokeclicker-master && git clean -x -f -- src/pokeclicker-master",
        "dist:win32": "electron-builder --ia32 -c.artifactName=${productName}-32bit-setup-${version}.${ext}",
        "dist:win64": "electron-builder --x64 -c.artifactName=${productName}-64bit-setup-${version}.${ext}",
        "dist:winPort": "electron-builder --windows portable",
        "dist:tux": "electron-builder --linux",
        "dist:mac": "electron-builder --macos",
        "pub:32": "electron-builder --ia32 -c.artifactName=${productName}-32bit-setup-${version}.${ext} -p always",
        "pub:64": "electron-builder --x64 -c.artifactName=${productName}-64bit-setup-${version}.${ext} -p always",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": {
        "name": "SwitchLove",
        "email": "dev@switchlove.app"
    },
    "license": "ISC",
    "dependencies": {
        "adm-zip": "^0.5.9",
        "discord-rpc": "^4.0.1",
        "electron-updater": "^5.3.0"
    },
    "devDependencies": {
        "electron": "^21.3.1",
        "electron-builder": "^23.6.0"
    },
    "build": {
        "appId": "pokeclicker.desktop.acsrq",
        "productName": "PokeClicker ACSRQ",
        "publish": [
            {
                "provider": "github",
                "owner": "switchlove",
                "repo": "Pokeclicker-desktop"
            }
        ],
        "win": {
            "requestedExecutionLevel": "highestAvailable",
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.games",
            "icon": "./build/icon_512x512.icns",
            "target": [
                "dmg",
                "pkg"
            ]
        },
        "linux": {
            "category": "Game",
            "compression": "maximum",
            "icon": "icon_512x512.png",
            "target": "deb"
        },
        "deb": {
            "compression": "xz"
        }
    }
}
