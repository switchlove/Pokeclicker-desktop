{
  "name": "pokeclicker-desktop-acsrq",
  "version": "1.1.2",
  "description": "PokeClicker Desktop - ACSRQ",
  "repository": {
    "type": "git",
    "url": "https://github.com/switchlove/Pokeclicker-desktop.git"
  },
  "main": "src/main.js",
  "scripts": {
    "start": "electron ./",
    "restore-src": "git restore --source=HEAD --staged --worktree -- src/pokeclicker-master && git clean -x -f -- src/pokeclicker-master",
    "dist:win32": "electron-builder --ia32 -c.artifactName=${productName}-32bit-setup-${version}.${ext}",
    "dist:win64": "electron-builder --x64 -c.artifactName=${productName}-64bit-setup-${version}.${ext}",
    "dist:winPort": "electron-builder --windows portable",
    "dist:tux": "electron-builder --linux",
    "dist:mac": "electron-builder --macos",
    "win": "electron-builder --windows portable",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "DevSwitch",
    "email": "dev@switchlove.app"
  },
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.9",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^5.0.1"
  },
  "devDependencies": {
    "electron": "^19.0.3",
    "electron-builder": "^23.0.3"
  },
  "build": {
    "appId": "pokeclicker.desktop.acsrq",
    "productName": "PokeClicker ACSRQ",
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.games",
      "icon": "./build/icon_512x512.icns",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "background": "./build/DMG_Background.tiff",
      "contents": [
        {
          "x": 450,
          "y": 115
        },
        {
          "x": 450,
          "y": 285,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "./build/icon_512x512.icns",
      "iconSize": 75,
      "internetEnabled": false,
      "sign": false,
      "title": "PokeClicker ACSRQ Installer",
      "window": {
        "width": 544,
        "height": 408
      }
    },
    "linux": {
      "category": "Game",
      "compression": "maximum",
      "icon": "./build/icon_512x512.icns",
      "target": [
        "deb",
        "pacman",
        "rpm"
      ]
    },
    "deb": {
      "compression": "xz"
    },
    "pacman": {
      "compression": "xz"
    },
    "rpm": {
      "compression": "xz"
    }
  }
}
